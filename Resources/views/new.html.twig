{% extends 'CampaignChainCoreBundle:Base:new.html.twig' %}

{% block form_header %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">LinkedIn {% if location.getLocationModule().getIdentifier() == 'campaignchain-linkedin-user' %}User{% else %}Page{% endif %}</h3>
        </div>
        <div class="panel-body">
            <div class="campaignchain-location-image"><img class="campaignchain-location-image" src="{{ location.getImage() }}"></div>
            <div class="campaignchain-location-name"><label>Display Name:</label>{{ location.getName() }}</div>
            <div class="campaignchain-location-name"><label>LinkedIn ID:</label>{{ location.getIdentifier() }}</div>
        </div>
    </div>
{% endblock %}